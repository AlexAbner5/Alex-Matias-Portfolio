---
import GitHub from "./icons/GitHub.astro"
import NextJS from "./icons/NextJS.astro"
import Tailwind from "./icons/Tailwind.astro"
import Link from "./icons/Link.astro"
import LinkButton from "./LinkButton.astro"
import JavaScript from "./icons/JavaScript.astro"
import CSharp from "./icons/CSharp.astro"

const TAGS = {
  NEXT: {
    name: "Next.js",
    class: "bg-black text-white",
    icon: NextJS,
  },
  TAILWIND: {
    name: "Tailwind CSS",
    class: "bg-[#003159] text-white",
    icon: Tailwind,
  },
  JAVASCRIPT: {
    name: "JavaScript",
    class: "bg-yellow-400/90 text-white",
    icon: JavaScript,
  },
  CSharp: {
    name: "CSharp",
    class: "bg-purple-700 text-white",
    icon: CSharp,
  },
}

const PROJECTS = [
  {
    title: "SIANA - ABET Accreditation System",
    description:
      "SIANA automates the accreditation process for engineering programs, replacing the slow, error-prone manual methods with a digital solution. Built with C# and JavaScript, the system ensures compliance with ABET standards, a critical factor for the programâ€™s reputation and ability to continue offering accredited degrees.",
    link: "",
    github: "",
    image: "/projects/SIANA.webp",
    tags: [TAGS.CSharp, TAGS.JAVASCRIPT],
  },
  {
    title: "Eazier - Property Management Platform",
    description:
      "Eazier is a scalable and robust platform designed to digitalize property management. Built with C# and JavaScript, it gathered feedback from over 200 users, enabling key adjustments before full launch. Recognized among the top 20 startups in the Fase1.org accelerator.",
    link: "https://eazierpr.azurewebsites.net/",
    image: "/projects/eazier.webp",
    tags: [TAGS.CSharp, TAGS.JAVASCRIPT],
  },
]
---

<div class="flex flex-col gap-y-16">
  {
    PROJECTS.map(({ image, title, description, tags, link, github }) => (
    <article class="flex flex-col space-x-0 space-y-8 group md:flex-row md:space-x-8 md:space-y-0">
  <div class="w-full md:w-1/2">
    <div class="relative flex flex-col items-center col-span-6 row-span-5 gap-8 transition duration-500 ease-in-out transform shadow-xl overflow-clip rounded-xl sm:rounded-xl md:group-hover:-translate-y-1 md:group-hover:shadow-2xl lg:border lg:border-gray-800 lg:hover:border-gray-700 lg:hover:bg-gray-800/50">
      <img alt="Hola Mundo" class="object-cover object-top w-full h-56 transition duration-500 sm:h-full md:scale-110 md:group-hover:scale-105" loading="lazy" src={image} />
    </div>
  </div>

  <div class="w-full md:w-1/2 md:max-w-lg">
    <h3 class="text-2xl font-bold text-gray-800 dark:text-gray-100">
      {title}
    </h3>
    <div class="flex flex-wrap mt-2">
      <ul class="flex flex-row mb-2 gap-x-2">
          {tags.map((tag) => (
            <li>
              <span
                class={`flex gap-x-2 rounded-full text-xs ${tag.class} py-1 px-2 `}
              >
                <tag.icon class="size-4" />
                {tag.name}
              </span>
            </li>
          ))}
        </ul>

      <div class="mt-2 text-gray-700 dark:text-gray-400">{description}</div>
      <footer class="flex items-end justify-start mt-4 gap-x-4">
          {github && (
            <LinkButton href={github}>
              <GitHub class="size-6" />
              Code
              
            </LinkButton>
          )}
          {link && (
            <LinkButton href={link}>
              <Link class="size-4" />
              Preview
            </LinkButton>
          )}
        </footer>
    </div>
  </div>
</article>
    ))
  }
</div>



